<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<data>

	<filter>
		<title>Keywords</title>
		<type>api</type>
		<api_command>docmgr_keyword_buildfilters</api_command>
	</filter>
	
	<filter>
		<title>Name</title>
		<data>name</data>
		<type>textbox</type>
		<data_type>text</data_type>
		<match>
			<title>contains</title>
			<data>contain</data>
		</match>
		<match>
			<title>does not contain</title>
			<data>notcontain</data>
		</match>
		<match>
			<title>equals</title>
			<data>equal</data>
		</match>
		<match>
			<title>does not equal</title>
			<data>notequal</data>
		</match>
	</filter>

	<filter>
		<title>Summary</title>
		<data>summary</data>
		<type>textbox</type>
		<data_type>text</data_type>
		<match>
			<title>contains</title>
			<data>contain</data>
		</match>
		<match>
			<title>does not contain</title>
			<data>notcontain</data>
		</match>
	</filter>

	<filter>
		<title>Content</title>
		<data>content</data>
		<type>textbox</type>
		<data_type>text</data_type>
		<match>
			<title>contains</title>
			<data>contain</data>
		</match>
		<match>
			<title>does not contain</title>
			<data>notcontain</data>
		</match>
	</filter>
	
	<filter>
		<title>Type</title>
		<data>object_type</data>
		<type>select</type>
		<data_type>text</data_type>
		<match>
			<title>equals</title>
			<data>equal</data>
		</match>
		<match>
			<title>does not equal</title>
			<data>notequal</data>
		</match>
		<option>
			<title>Collection</title>
			<data>collection</data>
		</option>
		<option>
			<title>File</title>
			<data>file</data>
		</option>
		<option>
			<title>DocMGR Document</title>
			<data>document</data>
		</option>
		<option>
			<title>URL</title>
			<data>url</data>
		</option>
		<option>
			<title>Saved Search</title>
			<data>search</data>
		</option>
		
	</filter>

	<filter>
		<title>Date Added</title>
		<data>date_created</data>
		<type>textbox</type>
		<data_type>date</data_type>
		<match>
			<title>on</title>
			<data>on</data>
		</match>
		<match>
			<title>before</title>
			<data>before</data>
		</match>
		<match>
			<title>after</title>
			<data>after</data>
		</match>
	</filter>

	<filter>
		<title>Date Modified</title>
		<data>date_modified</data>
		<type>textbox</type>
		<data_type>date</data_type>
		<match>
			<title>on</title>
			<data>on</data>
		</match>
		<match>
			<title>before</title>
			<data>before</data>
		</match>
		<match>
			<title>after</title>
			<data>after</data>
		</match>
	</filter>

	<filter>
		<title>Owned By</title>
		<data>account_id</data>
		<data_type>number</data_type>
		<type>select</type>
		<api_command>config_account_search</api_command>
    <title_field>full_name</title_field>
    <data_field>id</data_field>
		<match>
			<title>equals</title>
			<data>equal</data>
		</match>
	</filter>

</data>

